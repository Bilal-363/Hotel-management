{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "description": "Haji Waris Hotel POS System",
  "author": "Devugo Tech Solution",
  "type": "module",
  "main": "electron.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "dist:all": "cd ../Backend && npm run build-exe && cd ../Frontend && vite build && npx electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "axios": "^1.13.2",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "framer-motion": "^12.23.26",
    "react": "^19.2.0",
    "react-datepicker": "^8.9.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.1",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.6",
    "react-to-print": "^3.2.0",
    "recharts": "^3.5.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-pwa": "^1.2.0"
  },
  "build": {
    "appId": "com.hajiwaris.hotel",
    "productName": "Haji Waris Hotel POS v3",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron.cjs",
      "package.json",
      "dist"
    ],
    "extraResources": [
      {
        "from": "../Backend/backend-server.exe",
        "to": "Backend/backend-server.exe"
      },
      {
        "from": "../Backend/.env",
        "to": "Backend/.env"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Haji Waris Hotel"
    },
    "linux": {
      "target": "deb",
      "category": "Office"
    }
  }
}
